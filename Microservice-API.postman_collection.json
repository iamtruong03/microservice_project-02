{
  "info": {
    "name": "Microservice API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Service Health Checks",
      "item": [
        {
          "name": "Eureka Server Status",
          "request": {
            "method": "GET",
            "url": "http://localhost:8761"
          }
        },
        {
          "name": "API Gateway Health",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/actuator/health"
          }
        }
      ]
    },
    {
      "name": "Order Service",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:8080/api/orders",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": 1,\n  \"totalAmount\": 150.00\n}"
            }
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/orders"
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/orders/1"
          }
        },
        {
          "name": "Get Orders by Customer",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/orders/customer/1"
          }
        },
        {
          "name": "Update Order",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:8080/api/orders/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": 1,\n  \"totalAmount\": 200.00,\n  \"status\": \"PROCESSING\"\n}"
            }
          }
        },
        {
          "name": "Delete Order",
          "request": {
            "method": "DELETE",
            "url": "http://localhost:8080/api/orders/1"
          }
        }
      ]
    },
    {
      "name": "Inventory Service",
      "item": [
        {
          "name": "Create Inventory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:8080/api/inventory",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": 1,\n  \"quantity\": 100\n}"
            }
          }
        },
        {
          "name": "Get All Inventories",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/inventory"
          }
        },
        {
          "name": "Get Inventory by Product",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/inventory/product/1"
          }
        },
        {
          "name": "Reserve Inventory",
          "request": {
            "method": "POST",
            "url": "http://localhost:8080/api/inventory/reserve?productId=1&quantity=10"
          }
        },
        {
          "name": "Update Inventory",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:8080/api/inventory/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": 1,\n  \"quantity\": 150,\n  \"reservedQuantity\": 10\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Accounting Service",
      "item": [
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:8080/api/accounting/transactions",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": 1,\n  \"customerId\": 1,\n  \"amount\": 150.00,\n  \"transactionType\": \"DEBIT\",\n  \"description\": \"Payment for order\"\n}"
            }
          }
        },
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/accounting/transactions"
          }
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/accounting/transactions/1"
          }
        },
        {
          "name": "Get Transactions by Order",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/accounting/orders/1/transactions"
          }
        },
        {
          "name": "Get Transactions by Customer",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/accounting/customers/1/transactions"
          }
        },
        {
          "name": "Update Transaction",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:8080/api/accounting/transactions/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": 1,\n  \"customerId\": 1,\n  \"amount\": 150.00,\n  \"transactionType\": \"DEBIT\",\n  \"status\": \"COMPLETED\",\n  \"description\": \"Payment for order\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Notification Service",
      "item": [
        {
          "name": "Send Notification",
          "request": {
            "method": "POST",
            "url": "http://localhost:8080/api/notifications?recipientEmail=test@example.com&subject=Order Confirmation&message=Your order has been confirmed"
          }
        },
        {
          "name": "Notification Service Health",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/notifications/health"
          }
        }
      ]
    }
  ]
}
